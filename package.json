{
	"name": "automation-testing",
	"version": "0.0.1",
	"description": "hybrid automation tool for puppeteer and selenium with mocha-chai",
	"scripts": {
		"test": "mocha --opts mocha.opts",
		"test:all": "run-script-os",
		"test:all:win32": "npm-run-all --continue-on-error test:chrome_puppeteer test:edge_selenium test:chrome_selenium test:firefox_selenium",
		"test:all:darwin:linux": "npm-run-all --continue-on-error test:chrome_puppeteer test:firefox_puppeteer test:chrome_selenium test:firefox_selenium",
		"test:all_sendMail": "run-script-os",
		"test:all_sendMail:win32": "npm-run-all --continue-on-error test:chrome_puppeteer_sendMail test:edge_selenium_sendMail test:chrome_selenium_sendMail test:firefox_selenium_sendMail",
		"test:all_sendMail:darwin:linux": "npm-run-all --continue-on-error test:chrome_puppeteer_sendMail test:firefox_puppeteer_sendMail test:chrome_selenium_sendMail test:firefox_selenium_sendMail",
		"test:all_parallel": "run-script-os",
		"test:all_parallel:win32": "npm-run-all --parallel test:chrome_puppeteer test:edge_selenium test:chrome_selenium test:firefox_selenium",
		"test:all_parallel:darwin:linux": "npm-run-all --parallel test:chrome_puppeteer test:firefox_puppeteer test:chrome_selenium test:firefox_selenium",
		"test:all_parallel_sendMail": "run-script-os",
		"test:all_parallel_sendMail:win32": "npm-run-all --parallel test:chrome_puppeteer_sendMail test:edge_selenium_sendMail test:chrome_selenium_sendMail test:firefox_selenium_sendMail",
		"test:all_parallel_sendMail:darwin:linux": "npm-run-all --parallel test:chrome_puppeteer_sendMail test:firefox_puppeteer_sendMail test:chrome_selenium_sendMail test:firefox_selenium_sendMail",
		
		"test:chrome_puppeteer": "mocha --opts mocha.opts -- browser:chrome framework:puppeteer",
		"test:firefox_puppeteer": "mocha --opts mocha.opts -- browser:firefox framework:puppeteer",
		"test:firefox_selenium": "mocha --opts mocha.opts -- browser:firefox framework:selenium",
		"test:chrome_selenium": "mocha --opts mocha.opts -- browser:chrome framework:selenium",
		"test:edge_selenium": "mocha --opts mocha.opts -- browser:edge framework:selenium",
		
		"test:chrome_puppeteer_sendMail": "npm-run-all --continue-on-error test:chrome_puppeteer test:sendMail_chrome_puppeteer",
		"test:firefox_puppeteer_sendMail": "npm-run-all --continue-on-error test:firefox_puppeteer test:sendMail_firefox_puppeteer",
		"test:firefox_selenium_sendMail": "npm-run-all --continue-on-error test:firefox_selenium test:sendMail_firefox_selenium",
		"test:chrome_selenium_sendMail": "npm-run-all --continue-on-error test:chrome_selenium test:sendMail_chrome_selenium",
		"test:edge_selenium_sendMail": "npm-run-all --continue-on-error test:edge_selenium test:sendMail_edge_selenium",

		"test:sendMail_chrome_puppeteer": "mocha --require babel-core/register test/sendMail.spec.js --timeout 30s -- browser:chrome framework:puppeteer",
		"test:sendMail_firefox_puppeteer": "mocha --require babel-core/register test/sendMail.spec.js --timeout 30s -- browser:firefox framework:puppeteer",
		"test:sendMail_firefox_selenium": "mocha --require babel-core/register test/sendMail.spec.js --timeout 30s -- browser:firefox framework:selenium",
		"test:sendMail_chrome_selenium": "mocha --require babel-core/register test/sendMail.spec.js --timeout 30s -- browser:chrome framework:selenium",
		"test:sendMail_edge_selenium": "mocha --require babel-core/register test/sendMail.spec.js --timeout 30s -- browser:edge framework:selenium",

		"eslint": "./node_modules/.bin/eslint src/ test/"
	},
	"keywords": [
		"testing",
		"mocha",
		"chai",
		"puppeteer",
		"selenium"
	],
	"author": "stepanchaparyan",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/stepanchaparyan/hybrid_selenium_puppeteer.git"
	},
	"dependencies": {
		"api-testrail": "^1.2.1",
		"chai": "^4.1.2",
		"chromedriver": "^74.0.0",
		"edgedriver": "^4.17134.1",
		"fs": "0.0.1-security",
		"geckodriver": "^1.16.2",
		"iedriver": "^3.14.1",
		"mocha": "^4.1.0",
		"mochawesome": "^3.1.2",
		"nodemailer": "^6.1.1",
		"npm-run-all": "^4.1.5",
		"puppeteer": "^1.15.0",
		"puppeteer-edge": "^0.12.4",
		"puppeteer-firefox": "^0.5.0",
		"run-script-os": "^1.0.7",
		"selenium-webdriver": "^4.0.0-alpha.4"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.2",
		"babel-preset-env": "1.7.0",
		"eslint": "^4.19.1",
		"eslint-loader": "^1.9.0",
		"eslint-plugin-mocha": "^5.2.1",
		"eslint-plugin-promise": "^3.5.0"
	}
}
